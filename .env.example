# Project Configuration
# Working Directory (Guest machine path)
PROJECT_ROOT=/target
PROJECT_GOAL=プロジェクトの目標を設定してください

# Target Project Path (Host machine path)
TARGET_PROJECT=

# LLM Configuration
LLM_BACKEND=cursor_cli
LLM_OUTPUT_FORMAT=text
# LLM_MODEL=gpt-5  # Optional: specify model

# State files Configuration
# State Configuration (Host machine path)
STATE_DIR=state

# Logging Configuration
# Log Directory (Host machine path)
LOG_DIR=logs
LOG_LEVEL=INFO

# Main Loop Configuration
WAIT_TIME_SECONDS=60
MAX_ITERATIONS=100

# Dashboard Configuration
# Set to true/1/on to enable dashboard mode (interactive UI)
DASHBOARD=false

# Error Handling Configuration
MAX_RETRIES=3

# Parallel Execution Configuration
MAX_PARALLEL_WORKERS=3
ENABLE_PARALLEL_EXECUTION=true
